<!DOCTYPE html>
<html>

<%- include(`partials/head`); %>

    <body class="content">

        <%- include(`partials/header`); %>

            <main class="main">

                <!-- INSERT CODE HERE  -->
                <div class="container">
                    <div class="item-view">
                        <img class="item-view-image" src="<%= product.imageurl %>"></img>
                        <div class="item-view-text">
                            <div class="item-view-text-title font-secondary main-color-emphasized">
                                <%= product.name %>
                            </div>
                            <hr>
                            <div class="item-view-text-property main-color">Price: <span class="item-view-text-value">
                                    <%= product.price%>
                                        kn
                                </span></div>
                            <div class="item-view-text-property main-color">Available colors: <span
                                    class="item-view-text-value">
                                    <%= product.colors %>
                                </span></div>
                            <div class="item-view-text-property main-color">Category: <span
                                    class="item-view-text-value">
                                    <%= category.name %>
                                </span></div>
                            <div class="item-view-text-property main-color">Seasonal: <span
                                    class="item-view-text-value">
                                    <%= category.seasonal %>
                                </span></div>
                            <div class="item-view-text-desc font-secondary main-color">
                                <%= category.description %>
                            </div>
                        </div>
                    </div>


                    <div class="centered-container">
                        <h1 class="decorated-title font-secondary main-color">Item <span
                                class="main-color-emphasized">Top Buyers</span>
                        </h1>
                        <div class="separator"></div>
                    </div>
                    <% if (buyers.length===0) { %>
                        <div class="centered-container">
                            <h2 class="decorated-title font-secondary main-color">No top buyers for this item! :(</h2>
                        </div>
                        <% } else { %>
                            <section class="section secondary-color-bg info_container">
                                <% for (let buyer of buyers) { %>
                                    <h3 class="decorated-title font-secondary main-color-emphasized">
                                        <%= buyer.name + ' ' + buyer.surname %>
                                            <a href="../buyers/update-buyer/<%= buyer.id%>">
                                                <img class="icon_crud" src="/images/pencil.png">
                                            </a>
                                    </h3>
                                    <div class="item-view-text-property main-color">E-mail:
                                        <span class="item-view-text-value">
                                            <%= buyer.email %>
                                        </span>
                                    </div>
                                    <div class="item-view-text-property main-color">Country:
                                        <span class="item-view-text-value">
                                            <%= buyer.country %>
                                        </span>
                                    </div>
                                    <div class="item-view-text-property main-color">Top buyer since:
                                        <span class="item-view-text-value">
                                            <%= buyer.buyersince %>
                                        </span>
                                    </div>
                                    <hr>
                                    <% } %>
                            </section>
                            <% } %>
                </div>
            </main>

            <%- include(`partials/footer`); %>

    </body>

</html>